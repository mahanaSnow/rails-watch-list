<div class="container mt-5">
  <h1 class="text-center mb-4"><%= @list.name %></h1>

  <% if @list.bookmarks.any? %>
    <div class="bookmarks">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card mb-3">
          <div class="card-body d-flex justify-content-between align-items-center">
            <span class="card-title"><%= bookmark.movie.title %></span>
            <p class="card-text"><%= bookmark.comment %></p>
            <%= button_to 'Delete Bookmark', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center">No bookmarks yet.</p>
  <% end %>

  <div class="actions mt-4">
    <%= link_to 'Add Bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
    <%= link_to 'Return to Lists', lists_path, class: 'btn btn-secondary ml-2' %>
  </div>
</div>



