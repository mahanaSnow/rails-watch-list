<section class="list-section">
  <% @lists.each do |list| %>
    <article class="list">
      <div class="d-flex align-items-center mb-3">
        <h2 class="list-title mb-0">
          <%= link_to list.name.capitalize, list_path(list), class: 'list_link' %>
        </h2>
        <span class="mx-2">|</span>
        <%= button_to list_path(list), method: :delete, data: { confirm: 'Are you sure you want to delete this list?', turbo: 'false' }, class: 'delete-list' do %>
          <i class="fa fa-trash" aria-hidden="true"></i>
        <% end %>
      </div>

      <div class="movies-container">
        <% list.movies.each do |movie| %>
          <div class="movie-card" style="background-image: url('<%= movie.poster_url %>')">
            <span class="movie-title"><%= movie.title %></span>
          </div>
        <% end %>
      </div>
    </article>
  <% end %>
</section>
